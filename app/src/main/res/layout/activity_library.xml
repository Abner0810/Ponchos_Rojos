<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_library"
    android:background="@color/grayBlue">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/superior_bar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/grayBlue">
        <ImageButton
            android:id="@+id/image_profile"
            android:layout_width="wrap_content"
            android:layout_height="0dp"

            android:layout_marginEnd="20dp"
            android:src="@drawable/generic_avatar"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="@id/superior_bar"
            app:layout_constraintTop_toTopOf="@id/superior_bar"
            app:layout_constraintBottom_toBottomOf="@id/superior_bar"
       />

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/gray"


            android:hint="Search"
            android:textColorHint="@color/deepBlue"
            android:fontFamily="@font/sf_pro_bold"
            android:paddingStart="15dp"


            app:layout_constraintEnd_toStartOf="@id/image_profile"
            app:layout_constraintStart_toStartOf="@id/superior_bar"
            app:layout_constraintTop_toTopOf="@id/superior_bar"
            app:layout_constraintBottom_toBottomOf="@id/superior_bar"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lupa_vector"
            android:background="@android:color/transparent"

            app:layout_constraintTop_toTopOf="@id/superior_bar"
            app:layout_constraintEnd_toStartOf="@id/image_profile"
            app:layout_constraintBottom_toBottomOf="@id/superior_bar"

            android:layout_marginEnd="30dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/library_recycler_games_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/deepBlue"
        app:layout_constraintTop_toBottomOf="@id/superior_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/library_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Library"
            android:textSize="30sp"
            android:textColor="@color/grayWhite"
            android:fontFamily="@font/sf_pro_bold"

            app:layout_constraintTop_toTopOf="@id/library_recycler_games_container"
            app:layout_constraintStart_toStartOf="@id/library_recycler_games_container"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"/>

        <Button
            android:id="@+id/filterby_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="filter by"
            android:textColor="@color/grayBlue"
            android:fontFamily="@font/sf_pro_bold"
            android:textSize="15sp"
            android:drawableEnd="@drawable/arrow_down"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/grayWhite"

            app:layout_constraintTop_toBottomOf="@id/library_text"
            app:layout_constraintStart_toStartOf="@id/library_recycler_games_container"/>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_games"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"

            app:layout_constraintTop_toBottomOf="@id/filterby_button"
            app:layout_constraintStart_toStartOf="@id/library_recycler_games_container"
            app:layout_constraintEnd_toEndOf="@id/library_recycler_games_container"
            app:layout_constraintBottom_toBottomOf="@id/library_recycler_games_container"/>

    </androidx.constraintlayout.widget.ConstraintLayout>









    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/grayBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageButton
            android:id="@+id/image_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shopping_cart"
            android:background="@android:color/transparent"

            app:layout_constraintTop_toTopOf="@id/bottom_bar"
            app:layout_constraintBottom_toBottomOf="@id/bottom_bar"
            app:layout_constraintStart_toStartOf="@id/bottom_bar"
            app:layout_constraintEnd_toEndOf="@id/bottom_bar"/>
        <ImageButton
            android:id="@+id/image_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tag_vector"
            android:background="@android:color/transparent"

            app:layout_constraintTop_toTopOf="@id/bottom_bar"
            app:layout_constraintBottom_toBottomOf="@id/bottom_bar"
            app:layout_constraintEnd_toStartOf="@id/image_cart"
            app:layout_constraintStart_toStartOf="@id/bottom_bar"
            app:tint="@color/grayWhite" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/library_vector"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toEndOf="@id/image_cart"
            app:layout_constraintEnd_toEndOf="@id/bottom_bar"
            app:layout_constraintTop_toTopOf="@id/bottom_bar"
            app:layout_constraintBottom_toBottomOf="@id/bottom_bar"
            app:tint="@color/skyBlue" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>