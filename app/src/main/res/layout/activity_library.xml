<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_library"
    android:background="@color/grayBlue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/superior_bar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/grayBlue">
        <ImageButton
            android:id="@+id/image_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/generic_avatar"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="@id/superior_bar"
            app:layout_constraintTop_toTopOf="@id/superior_bar"
            app:layout_constraintBottom_toBottomOf="@id/superior_bar"
       />

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/grayWhite"
            android:inputType="text"
            android:hint="@string/search"
            android:textColorHint="@color/deepBlue"
            android:fontFamily="@font/sf_pro_bold"
            android:paddingStart="15dp"
            app:layout_constraintEnd_toStartOf="@id/image_profile"
            app:layout_constraintStart_toStartOf="@id/superior_bar"
            app:layout_constraintTop_toTopOf="@id/superior_bar"
            app:layout_constraintBottom_toBottomOf="@id/superior_bar"/>
        <ImageView
            android:id="@+id/imageview1"
            android:layout_width="40dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/search"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="@id/search_bar"
            app:layout_constraintEnd_toEndOf="@id/search_bar"
            app:layout_constraintBottom_toBottomOf="@id/search_bar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedlayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/deepBlue"
        app:layout_constraintTop_toBottomOf="@id/superior_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/library_recycler_games_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/LeftGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="25dp">
            </androidx.constraintlayout.widget.Guideline>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/RightGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="25dp">
            </androidx.constraintlayout.widget.Guideline>
            <TextView
                android:id="@+id/library_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/library"
                android:textSize="30sp"
                android:padding="5dp"
                android:textColor="@color/grayWhite"
                android:fontFamily="@font/sf_pro_bold"
                app:layout_constraintTop_toTopOf="@id/library_recycler_games_container"
                app:layout_constraintStart_toStartOf="@id/LeftGuideline"
                android:layout_marginTop="15dp"/>

            <Spinner
                android:id="@+id/SortSpinner"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:layout_constraintTop_toBottomOf="@id/library_text"
                app:layout_constraintStart_toStartOf="@id/LeftGuideline" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_games"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"

                app:layout_constraintTop_toBottomOf="@id/SortSpinner"
                app:layout_constraintStart_toStartOf="@id/LeftGuideline"
                app:layout_constraintEnd_toEndOf="@id/RightGuideline"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/yourLibrary_isempty_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_library_is_empty_title"
        android:textSize="25sp"
        android:fontFamily="@font/sf_pro_bold"
        android:textColor="@color/grayWhite"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/grayBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageButton
            android:id="@+id/buttonimage_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shopping_cart"
            android:background="@android:color/transparent"

            app:layout_constraintTop_toTopOf="@id/bottom_bar"
            app:layout_constraintBottom_toBottomOf="@id/bottom_bar"
            app:layout_constraintStart_toStartOf="@id/bottom_bar"
            app:layout_constraintEnd_toEndOf="@id/bottom_bar"/>
        <ImageButton
            android:id="@+id/buttonimage_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tag_vector"
            android:background="@android:color/transparent"

            app:layout_constraintTop_toTopOf="@id/bottom_bar"
            app:layout_constraintBottom_toBottomOf="@id/bottom_bar"
            app:layout_constraintEnd_toStartOf="@id/buttonimage_cart"
            app:layout_constraintStart_toStartOf="@id/bottom_bar"
            app:tint="@color/grayWhite" />
        <ImageButton
            android:id="@+id/buttonimage_library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/library_vector"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toEndOf="@id/buttonimage_cart"
            app:layout_constraintEnd_toEndOf="@id/bottom_bar"
            app:layout_constraintTop_toTopOf="@id/bottom_bar"
            app:layout_constraintBottom_toBottomOf="@id/bottom_bar"
            app:tint="@color/skyBlue" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>