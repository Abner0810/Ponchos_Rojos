<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_gameInfo"
    android:background="@color/grayBlue">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_gameInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"
        />

    <ImageButton
        android:id="@+id/image_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/generic_avatar"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline_top_gameInfo"/>

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/grayWhite"
        android:fontFamily="@font/sf_pro_bold"
        android:hint="@string/hint_search"
        android:inputType="text"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColorHint="@color/deepBlue"
        app:layout_constraintBottom_toTopOf="@id/guideline_top_gameInfo"
        app:layout_constraintEnd_toStartOf="@id/image_profile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/search_icon"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:src="@drawable/search"
        android:background="@android:color/transparent"
        android:layout_marginEnd="5dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/search_bar"
        app:layout_constraintEnd_toEndOf="@id/search_bar"
        app:layout_constraintBottom_toBottomOf="@id/search_bar"
        />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintTop_toTopOf="@id/guideline_top_gameInfo"
        app:layout_constraintBottom_toTopOf="@id/guideline_bottom_gameInfo"
        android:background="@color/deepBlue">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_infoGames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/game_portrait"
                android:layout_width="wrap_content"
                android:layout_height="245dp"
                android:src="@drawable/eldenring"
                app:layout_constraintStart_toStartOf="@id/container_infoGames"
                app:layout_constraintTop_toTopOf="@id/container_infoGames"
                />

            <TextView
                android:id="@+id/game_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/game_portrait"
                app:layout_constraintStart_toStartOf="@id/container_infoGames"
                app:layout_constraintEnd_toEndOf="@id/container_infoGames"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/game_title_elden_ring"
                android:textColor="@color/grayWhite"
                android:textSize="30sp"
                android:fontFamily="@font/sf_pro_bold"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/description_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grayBlue"
                app:layout_constraintTop_toBottomOf="@id/game_title_text"
                app:layout_constraintBottom_toTopOf="@id/game_video"
                app:layout_constraintStart_toStartOf="@id/container_infoGames"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/game_developer_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/description_container"
                    app:layout_constraintStart_toStartOf="@id/description_container"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/released_by"
                    android:textColor="@color/grayWhite"
                    android:textSize="18sp"
                    android:fontFamily="@font/sf_pro_bold"/>
                <TextView
                    android:id="@+id/game_release_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/game_date_info"
                    app:layout_constraintStart_toStartOf="@id/description_container"
                    android:layout_marginStart="20dp"
                    android:text="@string/in_text"
                    android:textColor="@color/grayWhite"
                    android:textSize="18sp"
                    android:fontFamily="@font/sf_pro_bold"/>
                <TextView
                    android:id="@+id/game_developer_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/description_container"
                    app:layout_constraintStart_toEndOf="@id/game_developer_title"
                    app:layout_constraintEnd_toEndOf="@id/description_container"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/developer_name"
                    android:textColor="@color/skyBlue"
                    android:textSize="18sp"
                    android:fontFamily="@font/sf_pro_bold"/>
                <TextView
                    android:id="@+id/game_date_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/game_developer_info"
                    app:layout_constraintStart_toEndOf="@id/game_release_title"
                    android:layout_marginStart="10dp"
                    android:text="@string/release_date"
                    android:textColor="@color/skyBlue"
                    android:textSize="18sp"
                    android:fontFamily="@font/sf_pro_bold"/>


                <TextView
                    android:id="@+id/game_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/game_release_title"
                    app:layout_constraintStart_toStartOf="@id/description_container"
                    app:layout_constraintEnd_toEndOf="@id/description_container"
                    app:layout_constraintBottom_toBottomOf="@id/description_container"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/game_description_text"
                    android:textColor="@color/grayWhite"
                    android:textSize="18sp"
                    android:fontFamily="@font/sf_pro_bold"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tags_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/game_video"
                app:layout_constraintBottom_toTopOf="@id/minimum_requirements_text"
                app:layout_constraintStart_toStartOf="@id/container_infoGames"
                app:layout_constraintEnd_toEndOf="@id/container_infoGames"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/grayBlue">
                <TextView
                    android:id="@+id/game_tag_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tags_container"
                    app:layout_constraintStart_toStartOf="@id/tags_container"
                    app:layout_constraintEnd_toEndOf="@id/tags_container"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/tags_text"
                    android:textColor="@color/grayWhite"
                    android:textSize="20sp"
                    android:fontFamily="@font/sf_pro_bold"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_tags_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:layout_constraintTop_toBottomOf="@id/game_tag_text"
                    app:layout_constraintStart_toStartOf="@id/tags_container"
                    app:layout_constraintEnd_toEndOf="@id/tags_container"
                    app:layout_constraintBottom_toBottomOf="@id/tags_container"
                    android:layout_marginBottom="15dp"/>





            </androidx.constraintlayout.widget.ConstraintLayout>



            <ImageView
                android:id="@+id/game_video"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/eldenring"
                app:layout_constraintEnd_toEndOf="@id/container_infoGames"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@id/container_infoGames"
                app:layout_constraintTop_toBottomOf="@id/description_container"
                />

            <ImageButton
                android:id="@+id/play_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/play_button"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="@id/game_video"
                app:layout_constraintBottom_toBottomOf="@id/game_video"
                app:layout_constraintStart_toStartOf="@id/game_video"
                app:layout_constraintEnd_toEndOf="@id/game_video"/>


            <TextView
                android:id="@+id/minimum_requirements_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/minimum_requirements"
                android:fontFamily="@font/sf_pro_bold"
                android:textSize="25sp"
                android:textColor="@color/grayWhite"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"


                app:layout_constraintTop_toBottomOf="@id/tags_container"
                app:layout_constraintStart_toStartOf="@id/container_infoGames"
                app:layout_constraintBottom_toTopOf="@id/minimum_requirements_card"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/minimum_requirements_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grayBlue"
                app:layout_constraintTop_toBottomOf="@id/minimum_requirements_text"
                app:layout_constraintBottom_toTopOf="@id/card_addToCart"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <TextView
                    android:id="@+id/so_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_bold"
                    android:textColor="@color/gray"
                    android:textSize="18sp"
                    android:text="@string/so_title"
                    app:layout_constraintTop_toTopOf="@id/minimum_requirements_card"
                    app:layout_constraintStart_toStartOf="@id/minimum_requirements_card"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/processor_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_bold"
                    android:textColor="@color/gray"
                    android:textSize="18sp"
                    android:text="@string/processor_title"
                    app:layout_constraintTop_toBottomOf="@id/so_title_text"
                    app:layout_constraintStart_toStartOf="@id/minimum_requirements_card"
                    app:layout_constraintTop_toTopOf="@id/processor_info_text"
                    android:layout_marginStart="10dp"
                   />
                <TextView
                    android:id="@+id/memory_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_bold"
                    android:textColor="@color/gray"
                    android:textSize="18sp"
                    android:text="@string/memory_title"
                    app:layout_constraintTop_toBottomOf="@id/processor_title_text"
                    app:layout_constraintStart_toStartOf="@id/minimum_requirements_card"
                    app:layout_constraintTop_toTopOf="@id/memory_info_text"
                    android:layout_marginStart="10dp"
                   />
                <TextView
                    android:id="@+id/graphics_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_bold"
                    android:textColor="@color/gray"
                    android:textSize="18sp"
                    android:text="@string/graphics_title"
                    app:layout_constraintTop_toBottomOf="@id/memory_title_text"
                    app:layout_constraintStart_toStartOf="@id/minimum_requirements_card"
                    app:layout_constraintTop_toTopOf="@id/graphics_info_text"
                    android:layout_marginStart="10dp"
                    />

                <TextView
                    android:id="@+id/storage_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_bold"
                    android:textColor="@color/gray"
                    android:textSize="18sp"
                    android:text="@string/storage_title"
                    app:layout_constraintTop_toBottomOf="@id/graphics_title_text"
                    app:layout_constraintStart_toStartOf="@id/minimum_requirements_card"
                    app:layout_constraintTop_toTopOf="@id/storage_info_text"
                    android:layout_marginStart="10dp"
                    />







                <TextView
                    android:id="@+id/so_info_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_bold"
                    android:textColor="@color/grayWhite"
                    android:textSize="18sp"
                    android:text="@string/so_info"
                    app:layout_constraintTop_toTopOf="@id/minimum_requirements_card"
                    app:layout_constraintStart_toEndOf="@id/so_title_text"
                    app:layout_constraintEnd_toEndOf="@id/minimum_requirements_card"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/processor_info_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_bold"
                    android:textColor="@color/grayWhite"
                    android:textSize="18sp"
                    android:text="@string/processor_info"
                    app:layout_constraintTop_toBottomOf="@id/so_info_text"
                    app:layout_constraintStart_toEndOf="@id/processor_title_text"
                    app:layout_constraintEnd_toEndOf="@id/minimum_requirements_card"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/memory_info_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_bold"
                    android:textColor="@color/grayWhite"
                    android:textSize="18sp"
                    android:text="@string/memory_info"
                    app:layout_constraintTop_toBottomOf="@id/processor_info_text"
                    app:layout_constraintStart_toEndOf="@id/memory_title_text"
                    app:layout_constraintEnd_toEndOf="@id/minimum_requirements_card"

                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/graphics_info_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_bold"
                    android:textColor="@color/grayWhite"
                    android:textSize="18sp"
                    android:text="@string/graphics_info"
                    app:layout_constraintTop_toBottomOf="@id/memory_info_text"
                    app:layout_constraintStart_toEndOf="@id/graphics_title_text"
                    app:layout_constraintEnd_toEndOf="@id/minimum_requirements_card"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/storage_info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_bold"
                    android:textColor="@color/grayWhite"
                    android:textSize="18sp"
                    android:text="@string/storage_info"
                    app:layout_constraintTop_toBottomOf="@id/graphics_info_text"
                    app:layout_constraintStart_toEndOf="@id/storage_title_text"
                    app:layout_constraintBottom_toBottomOf="@id/minimum_requirements_card"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"/>





            </androidx.constraintlayout.widget.ConstraintLayout>







            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_addToCart"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:background="@color/grayBlue"
                app:layout_constraintTop_toBottomOf="@id/minimum_requirements_card"
                app:layout_constraintBottom_toBottomOf="@id/container_infoGames"

                >

                <TextView
                    android:id="@+id/game_buy_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/card_addToCart"
                    app:layout_constraintStart_toStartOf="@id/card_addToCart"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"

                    android:text="@string/buy_text"
                    android:textColor="@color/grayWhite"
                    android:fontFamily="@font/sf_pro_bold"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/nameGame_toAddCart_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/card_addToCart"
                    app:layout_constraintStart_toEndOf="@id/game_buy_text"
                    app:layout_constraintEnd_toStartOf="@id/priceGame_text"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"

                    android:text="@string/game_title_elden_ring"
                    android:textColor="@color/grayWhite"
                    android:fontFamily="@font/sf_pro_bold"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/priceGame_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/card_addToCart"
                    app:layout_constraintEnd_toEndOf="@id/card_addToCart"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"

                    android:text="@string/price_elden_ring"
                    android:textColor="@color/grayWhite"
                    android:fontFamily="@font/sf_pro_bold"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/addToCart_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/nameGame_toAddCart_text"
                    app:layout_constraintStart_toStartOf="@id/card_addToCart"
                    app:layout_constraintBottom_toBottomOf="@id/card_addToCart"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="15dp"
                    android:backgroundTint="@color/grayWhite"
                    android:text="@string/add_to_cart"
                    android:textSize="20sp"
                    android:textColor="@color/grayBlue"
                    android:fontFamily="@font/sf_pro_bold"
                    android:padding="5dp"/>
                <Button
                    android:id="@+id/addedToCart_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/nameGame_toAddCart_text"
                    app:layout_constraintStart_toStartOf="@id/card_addToCart"
                    app:layout_constraintBottom_toBottomOf="@id/card_addToCart"

                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="15dp"
                    android:backgroundTint="@color/skyBlue"
                    android:text="@string/added_to_cart"
                    android:textSize="20sp"
                    android:textColor="@color/grayBlue"
                    android:fontFamily="@font/sf_pro_bold"
                    android:padding="5dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/on_your_library_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/nameGame_toAddCart_text"
                    app:layout_constraintStart_toStartOf="@id/card_addToCart"
                    app:layout_constraintBottom_toBottomOf="@id/card_addToCart"

                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/already_on_library"
                    android:textSize="20sp"
                    android:textColor="@color/skyBlue"
                    android:fontFamily="@font/sf_pro_bold"
                    android:visibility="gone"/>




            </androidx.constraintlayout.widget.ConstraintLayout>





        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>




    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom_gameInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.88" />
        <ImageButton
            android:id="@+id/buttonimage_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shopping_cart"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@id/guideline_bottom_gameInfo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageButton
            android:id="@+id/buttonimage_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tag_vector"
            android:background="@android:color/transparent"

            app:layout_constraintTop_toBottomOf="@id/guideline_bottom_gameInfo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonimage_cart"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/grayWhite" />
    <ImageButton
        android:id="@+id/buttonimage_library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/library_vector"
        android:background="@android:color/transparent"

        app:layout_constraintStart_toEndOf="@id/buttonimage_cart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_bottom_gameInfo"
        app:layout_constraintBottom_toBottomOf="parent"/>







        





</androidx.constraintlayout.widget.ConstraintLayout>