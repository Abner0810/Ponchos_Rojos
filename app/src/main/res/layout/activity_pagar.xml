<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pantalla_metodo_pago"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/deepBlue">

    <ImageView
        android:id="@+id/flecha"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/left_arrow_svgrepo_com_1__1_"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/metodo_pago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/flecha"
        android:text="Metodo de pago"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        />

    <ImageButton
        android:id="@+id/avatarBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/generic_avatar"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:padding="10dp" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/avatarBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true"
        android:background="@color/azul_oscuro">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/selecmetodo_pago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Seleccionar metodo de pago"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/menu_pago"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@color/gris_claro"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/selecmetodo_pago"
                />

            <TextView
                android:id="@+id/Nro_tarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Numero de tarjeta"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/menu_pago" />

            <EditText
                android:id="@+id/rellenar_tarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/gris_claro"
                android:hint="rellenar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Nro_tarjeta" />

            <TextView
                android:id="@+id/Fecha_expiracion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Fecha de expiraciÃ³n"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rellenar_tarjeta" />

            <TextView
                android:id="@+id/Cdg_seguridad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Codigo de Seguridad"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@id/Fecha_expiracion"
                app:layout_constraintTop_toBottomOf="@id/rellenar_tarjeta" />

            <Spinner
                android:id="@+id/fechaMes"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="@color/gris_claro"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Fecha_expiracion" />

            <Spinner
                android:id="@+id/fechaAnio"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="@color/gris_claro"
                app:layout_constraintStart_toEndOf="@id/fechaMes"
                app:layout_constraintTop_toBottomOf="@id/Fecha_expiracion" />

            <EditText
                android:id="@+id/codigo_seg_rellenar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/gris_claro"
                android:hint="rellenar"
                app:layout_constraintStart_toEndOf="@id/fechaAnio"
                app:layout_constraintTop_toBottomOf="@id/Cdg_seguridad" />

            <TextView
                android:id="@+id/factura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Informacion factura"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/codigo_seg_rellenar" />

            <TextView
                android:id="@+id/nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Nombre"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/factura" />

            <EditText
                android:id="@+id/rellenar_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/gris_claro"
                android:hint="rellenar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nombre" />

            <TextView
                android:id="@+id/apellido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Apellido"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@id/nombre"
                app:layout_constraintTop_toBottomOf="@id/factura" />

            <EditText
                android:id="@+id/rellenar_apellido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/gris_claro"
                android:hint="rellenar"
                app:layout_constraintStart_toEndOf="@id/rellenar_nombre"
                app:layout_constraintTop_toBottomOf="@id/nombre" />

            <TextView
                android:id="@+id/direccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Direccion de la cuenta "
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rellenar_nombre" />

            <EditText
                android:id="@+id/rellenar_direccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/gris_claro"
                android:hint="rellenar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/direccion" />

            <TextView
                android:id="@+id/ciudad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Ciudad"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rellenar_direccion" />

            <EditText
                android:id="@+id/rellenar_ciudad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/gris_claro"
                android:hint="rellenar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ciudad" />

            <TextView
                android:id="@+id/codigo_postal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Codigo Postal"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rellenar_ciudad" />

            <EditText
                android:id="@+id/rellenar_codigo_postal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/gris_claro"
                android:hint="rellenar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/codigo_postal" />

            <TextView
                android:id="@+id/Pais_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Pais"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rellenar_codigo_postal" />

            <EditText
                android:id="@+id/rellenar_Pais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/gris_claro"
                android:hint="rellenar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Pais_text" />

            <TextView
                android:id="@+id/celular_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Celular"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rellenar_Pais" />

            <EditText
                android:id="@+id/rellenar_celular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/gris_claro"
                android:hint="rellenar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/celular_text" />

            <TextView
                android:id="@+id/metodo_pago_imagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Metodo de pago"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rellenar_celular" />

            <LinearLayout
                android:id="@+id/payment_logos_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/grayBlue"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/metodo_pago_imagen">

                <ImageView
                    android:id="@+id/visa_card"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/visa_3_svgrepo_com" />

                <ImageView
                    android:id="@+id/master_card"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/mastercard_old_3_svgrepo_com" />

                <ImageView
                    android:id="@+id/jcb_card"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/jcb_svgrepo_com" />
            </LinearLayout>


            <Button
                android:id="@+id/btnPagar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/gris_claro"
                android:text="Pagar"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/payment_logos_layout" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>