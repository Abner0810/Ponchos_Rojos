<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grayBlue"
    android:layout_marginEnd="30dp"
    android:layout_marginStart="30dp"
    android:layout_marginTop="15dp">
    <ImageButton
        android:id="@+id/image_game_cart"
        android:layout_width="360dp"
        android:layout_height="125dp"
        android:src="@drawable/detroit_become_human_image"
        android:scaleType="centerCrop"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingEnd="15dp"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/title_game_cart_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nine Sols"
        android:textSize="15sp"
        android:textColor="@color/grayWhite"
        android:fontFamily="@font/sf_pro_bold"

        app:layout_constraintTop_toBottomOf="@id/image_game_cart"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/price_game_cart_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="15sp"
        android:textColor="@color/grayWhite"
        android:fontFamily="@font/sf_pro_bold"

        app:layout_constraintTop_toBottomOf="@id/image_game_cart"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/remove_button"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:text="Remove"
        android:textSize="15sp"
        android:textColor="@color/grayBlue"
        android:fontFamily="@font/sf_pro_bold"
        android:backgroundTint="@color/grayWhite"
        android:padding="0dp"

        app:layout_constraintTop_toBottomOf="@id/price_game_cart_section"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>








</androidx.constraintlayout.widget.ConstraintLayout>