<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deepBlue"
    tools:context=".MainPerfilActivity">

    <ImageView
        android:id="@+id/flecha"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/left_arrow_svgrepo_com_1__1_"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/user_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/flecha"
        android:text="Perfil de Usuario"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_margin="10dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/flecha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/azul_oscuro">

        <ImageView
            android:id="@+id/perfil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            android:src="@drawable/generic_avatar" />

        <TextView
            android:id="@+id/id_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/fondo"
            app:layout_constraintStart_toEndOf="@+id/perfil"
            android:text="ID_Usuario"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_margin="25dp" />

        <TextView
            android:id="@+id/gmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/id_usuario"
            app:layout_constraintStart_toEndOf="@+id/perfil"
            android:text="useraccount@gmail.com"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_margin="10dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/nombre_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fondo"
        android:text="Nombre"
        android:textColor="@color/white"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/nombre1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/nombre_label"
        android:text="Josefo Gallardo Hernandez"
        android:textColor="@color/white"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/email_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/nombre1"
        android:text="Email"
        android:textColor="@color/white"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/email1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/email_label"
        android:text="useraccount@gmail.com"
        android:textColor="@color/white"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/password_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/email1"
        android:text="Contraseña"
        android:textColor="@color/white"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/password_label"
        android:text="******"
        android:textColor="@color/white"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/celular_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/password1"
        android:text="Celular"
        android:textColor="@color/white"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/celular1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/celular_label"
        android:text="74583493"
        android:textColor="@color/white"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/pais_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/celular1"
        android:text="País"
        android:textColor="@color/white"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/pais1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/pais_label"
        android:text="Pakestan"
        android:textColor="@color/white"
        android:layout_margin="10dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fondo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pais1"
        android:background="@color/azul_oscuro">

        <Button
            android:id="@+id/boton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Cambiar Información"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:background="@color/grayWhite"
            app:layout_constraintTop_toTopOf="@id/fondo1" />

        <Button
            android:id="@+id/boton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Cerrar Sesion"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:background="@color/grayWhite"
            app:layout_constraintTop_toBottomOf="@id/boton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
