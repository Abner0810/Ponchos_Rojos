<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_cart"
    android:background="@color/deepBlue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/superior_bar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/grayBlue">

        <ImageButton
            android:id="@+id/image_profile"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/generic_avatar"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="@id/superior_bar"
            app:layout_constraintTop_toTopOf="@id/superior_bar"
            app:layout_constraintBottom_toBottomOf="@id/superior_bar" />

        <TextView
            android:id="@+id/yourcart_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cart_title"
            android:textSize="25sp"
            android:fontFamily="@font/sf_pro_bold"
            android:textColor="@color/grayWhite"
            app:layout_constraintTop_toTopOf="@id/superior_bar"
            app:layout_constraintBottom_toBottomOf="@id/superior_bar"
            app:layout_constraintStart_toStartOf="@id/superior_bar"
            app:layout_constraintEnd_toStartOf="@id/image_profile"
            app:layout_constraintHorizontal_bias="0.1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_cart_games"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/superior_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/total_price_card" />

    <TextView
        android:id="@+id/yourcart_isempty_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cart_empty_message"
        android:textSize="25sp"
        android:fontFamily="@font/sf_pro_bold"
        android:textColor="@color/grayWhite"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/superior_bar"
        app:layout_constraintBottom_toTopOf="@id/total_price_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/total_price_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grayBlue"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/total_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_label"
            android:textColor="@color/grayWhite"
            android:fontFamily="@font/sf_pro_bold"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="@id/total_price_card"
            app:layout_constraintStart_toStartOf="@id/total_price_card"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/price_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/price_label"
            android:textColor="@color/grayWhite"
            android:fontFamily="@font/sf_pro_bold"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="@id/total_price_card"
            app:layout_constraintEnd_toEndOf="@id/total_price_card"
            app:layout_constraintStart_toStartOf="@id/total_price_card"
            android:gravity="end"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp" />

        <Button
            android:id="@+id/pay_button"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="@string/pay_button_label"
            android:textColor="@color/grayBlue"
            android:textSize="15sp"
            android:fontFamily="@font/sf_pro_bold"
            android:backgroundTint="@color/grayWhite"
            android:padding="0dp"
            app:layout_constraintTop_toBottomOf="@id/total_price_text"
            app:layout_constraintStart_toStartOf="@id/total_price_card"
            app:layout_constraintBottom_toBottomOf="@id/total_price_card"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/grayBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/buttonimage_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shopping_cart"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@id/bottom_bar"
            app:layout_constraintBottom_toBottomOf="@id/bottom_bar"
            app:layout_constraintStart_toStartOf="@id/bottom_bar"
            app:layout_constraintEnd_toEndOf="@id/bottom_bar"
            app:tint="@color/skyBlue" />

        <ImageButton
            android:id="@+id/buttonimage_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tag_vector"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@id/bottom_bar"
            app:layout_constraintBottom_toBottomOf="@id/bottom_bar"
            app:layout_constraintEnd_toStartOf="@id/buttonimage_cart"
            app:layout_constraintStart_toStartOf="@id/bottom_bar"
            app:tint="@color/grayWhite" />

        <ImageButton
            android:id="@+id/buttonimage_library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/library_vector"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toEndOf="@id/buttonimage_cart"
            app:layout_constraintEnd_toEndOf="@id/bottom_bar"
            app:layout_constraintTop_toTopOf="@id/bottom_bar"
            app:layout_constraintBottom_toBottomOf="@id/bottom_bar" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>